CC = mpiicc

CXX = mpiicxx

CFLAGS	= -std=c++11 -O3 -ipo -fp-model fast=2 -xHost -qopt-matmul -qopt-zmm-usage=high -qopenmp

all: mygemm fpdiff

mygemm: gemm.o
	$(CC) -o $@ $^ $(CFLAGS)

gemm.o: gemm.cpp
	$(CC) -c $(CFLAGS) $<

fpdiff: fpdiff.cpp
	$(CC) -o $@ $^

gencase: gencase.cpp
	$(CC) -o $@ $^

.PHONY: clean

clean: 
	rm -f *.o
	rm -f mygemm
	rm -f fpdiff
	rm -f gencase
